<header class="d-flex flex-column">
  <div class="container-fluid">
    <nav class="navbar">
      <% if admin_signed_in? %>
        <a class="navbar-brand" href="/admin"><%= image_tag("logo.png") %></a>
      <% else %>
        <a class="navbar-brand" href="/"><%= image_tag("logo.png") %></a>
      <% end %>
      <div>
        <ul class="navbar-nav list-group list-group-horizontal">
          <% if admin_signed_in? %>
            <!--管理者ログイン後-->
            <li class="nav-item">
              <%= link_to "商品一覧", admin_items_path, method: :get, class: 'nav-link btn btn-outline-dark pr-3 pl-3 ml-4' %>
            </li>
            <li class="nav-item">
              <%= link_to "会員一覧", admin_customers_path, method: :get, class: 'nav-link btn btn-outline-dark pr-3 pl-3 ml-4' %>
            </li>
            <li class="nav-item">
              <%= link_to "注文履歴一覧", admin_root_path, method: :get, class: 'nav-link btn btn-outline-dark pr-1 pl-1 ml-4' %>
            </li>
            <li class="nav-item">
              <%= link_to "ジャンル一覧", admin_genres_path, method: :get, class: 'nav-link btn btn-outline-dark pr-1 pl-1 ml-4' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link btn btn-outline-dark pr-2 pl-2 ml-4' %>
            </li>
          <% elsif customer_signed_in? %>
            <!--顧客ログイン後-->
            <li class="nav-item pt-2">
              <p>ようこそ <%= current_customer.last_name+current_customer.first_name %>さん！</p>
            </li>
            <li class="nav-item">
              <%= link_to "マイページ", customers_mypage_path, method: :get, class: 'nav-link btn btn-outline-dark pr-1 pl-1 ml-4' %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", items_path, method: :get, class: 'nav-link btn btn-outline-dark pr-3 pl-3 ml-4' %>
            </li>
            <li class="nav-item">
              <%= link_to "カート", cart_items_path, method: :get, class: 'nav-link btn btn-outline-dark pr-4 pl-4 ml-4' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'nav-link btn btn-outline-dark pr-1 pl-1 ml-4' %>
            </li>
          <% else %>
            <!--ログイン前-->
            <li class="nav-item">
              <%= link_to "About", about_path, method: :get, class: 'nav-link btn btn-outline-dark pr-4 pl-4 ml-4' %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", items_path, method: :get, class: 'nav-link btn btn-outline-dark pr-3 pl-3 ml-4' %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", new_customer_registration_path, method: :get, class: 'nav-link btn btn-outline-dark pr-3 pl-3 ml-4' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_customer_session_path, method: :get, class: 'nav-link btn btn-outline-dark pr-3 pl-3 ml-4' %>
            </li>
          <% end %>
        </ul>
        <div class="form-group text-right mt-3">
        	<%= render 'layouts/search' %>
        </div>
      </div>
    </nav>
  </div>
</header>
