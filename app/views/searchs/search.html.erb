<div class='container'>
  <div class='row', style="width: 100%;">
    <div class='col-3'>
      <%= render 'public/items/left_menu', genres: @genres %>
    </div>
    <div class='col-9'>
      <div class="row">
        <h3>"<%= @content %>"での検索結果(全<%= @records.count %>件)</h3>
      </div>
      <div class="d-flex flex-wrap mt-4">
        <%= render 'public/items/index', active_items: @records %>
      </div>

      <div class="d-flex justify-content-center mt-5">
        <%= paginate @record %>
      </div>

    </div>
  </div>
</div>