<div class="container">
  <div class="row">
    <div class="offset-1">
      <h4>管理者ログイン</h4>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-goup p-2">
      <div class="row">
        <%= f.label  :"メールアドレス",class: "offset-1"%>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "sample@example.com",class: "form-control ml-3 col-5"%>
      </div>
    </div>
    <div class="form-goup p-2">
      <div class="row">
        <%= f.label :"パスワード",class: "offset-1"%>
        <%= f.password_field :password, autocomplete: "current-password",class: "form-control ml-5 col-3"%>
      </div>
    </div>
  
    <div class="form-group p-2 ml-4">
      <div class="row offset-2 px-0">
        <%= f.submit "ログイン",class:"btn btn-primary"%>
      </div>
    </div>
  <% end %>
<%= render "admin/shared/links" %>
</div>