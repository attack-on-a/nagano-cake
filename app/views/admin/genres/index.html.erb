<h4>ジャンル一覧・追加</h4>
<%=form_with model: @genre,url:admin_genres_path,method: :post do |f| %>

  <h5>ジャンル名</h5>
  <%= f.text_field :name %>
  <%= f.submit"新規登録",class:"btn btn-success"%>
  
<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <%@genres.each do |genre|%>
      <td><%=genre.name%></td>
      <td><%= link_to "編集",edit_admin_genre_path(genre),class:"btn btn-success"%></td>
      <% end %>
    </tr>
  </tbody>
</table>