<div class="container">
  <div class="row p-2">
    <h4>ジャンル一覧・追加</h4>
  </div>
  <div class="row offset-1 p-2">
    <%=form_with model: @genre,url:admin_genres_path,method: :post do |f| %>
    <h5>ジャンル名</h5>
      <%= f.text_field :name, style:"background-color:#fcfced" %>
      <%= f.submit"新規登録",class:"btn btn-success"%>
    <% end %>
  </div>
  <div class="row offset-1 p-2">
      <table class="table sm table-hover" style="background-color:#fcfced">
        <thead class="table-active">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%@genres.each do |genre|%>
          <tr>
            <td><%=genre.name%></td>
            <td><%= link_to "編集",edit_admin_genre_path(genre),class:"btn btn-success"%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>