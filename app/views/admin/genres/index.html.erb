<div class="container">
  <div class="card rounded col-9 mx-auto mt-4" style="background-color:#fcfced;" >
    <div class="row">
      <div class="col-12 p-0">
        <h4 class="text-center p-2">ジャンル一覧・追加</h4>
        <div class="text-center p-3">
          <%=form_with model: @genre,url:admin_genres_path,method: :post do |f| %>
            <%= f.text_field :name, style:"background-color:#fcfced" %>
            <%= f.submit"新規登録",class:"btn btn-success"%>
          <% end %>
        </div>
        <table class="table table-hover text-center mt-2 mb-0" style="background-color:#fcfced">
          <thead class="table-active">
            <tr>
              <th style="width:80%">ジャンル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%@genres.each do |genre|%>
              <tr>
                <td><%=genre.name%></td>
                <td><%= link_to "編集",edit_admin_genre_path(genre),class:"btn btn-success"%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
