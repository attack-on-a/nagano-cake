<div class="container">
  <div class="row" style="margin-top:20px; margin-bottom:20px;">
    <h4><%= @customer.last_name+@customer.first_name %>さんの会員詳細</h4>
  </div>
  <div class="row">
    <div class="col-md-9">
      <table class="table table-borderless">
        <thead>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name+@customer.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.kana_last_name+@customer.kana_first_name %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.post_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.post_address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <% if @customer.is_deleted == false %>
              <td class="text-success">有効</td>
            <% else %>
              <td class="text-secondary">退会</td>
            <% end %>
          </tr>
        </thead>
      </table>
      <div class="text-center">
        <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success mr-5" %>
        <%= link_to "注文履歴一覧を見る", admin_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
