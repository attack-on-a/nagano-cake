<div class="container my-4">
  <div class="d-flex">
    <h4 class="bg-light">
      <%= @customer.last_name + @customer.first_name %>さんの注文履歴
    </h4>
  </div>
  <div class="col-10 mx-auto my-4">
    <table class="table table-hover">
      <thead>
        <tr class="bg-light">
          <td class="text-center"><strong>購入日時</strong></td>
          <td><strong>注文個数</strong></td>
          <td><strong>注文ステータス</strong></td>
        </tr>
      </thead>
        <tbody class="bg-white">
            <% @orders.each do |order| %>
            <tr>
              <td class="text-center">
                <%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"), admin_order_path(order.id),class:"text-dark" %>
              </td>
              <td> <%= order.order_details.sum(:amount) %> </td>
              <td> <%= order.order_status_i18n %> </td>
            </tr>
            <% end %>
        </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-center">
    <%= paginate @orders %>
  </div>
</div>