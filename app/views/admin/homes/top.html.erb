<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-10 col-lg-10 px-5 px-sm-0 mx-auto">
        <h4>注文履歴一覧</h4>
        <table class="table table-hover" style="background-color:#fcfced">
            <thead class="table-active">
                <tr>
                    <th>購入日時</th>
                    <th>購入者</th>
                    <th>注文個数</th>
                    <th>注文ステータス</th>
                </tr>
            </thead>
            <tbody>
                <% @orders.each do |order| %>
                <tr>
                    <td>
                        <%= link_to admin_order_path(order.id), class: "text-dark" do %>
                          <%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
                        <% end %>
                    </td>
                    <td>
                        <%= link_to admin_path(order.customer.id), class: "text-dark" do %>
                          <%= order.customer.last_name %> <%= order.customer.first_name %>
                        <% end %>
                    </td>
                    <td> <%= order.order_details.sum(:amount) %> </td>
                    <td> <%= order.order_status_i18n %> </td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <%= paginate @orders %>
    </div>
  </div>
</div>

