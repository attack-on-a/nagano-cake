<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-10 col-lg-10 px-5 px-sm-0 mx-auto">

        <h2>注文履歴一覧</h2>

        <table class="table">
            <thead>
                <tr>
                    <th>購入日時</th>
                    <th>購入者</th>
                    <th>注文個数</th>
                    <th>注文ステータス</th>

                </tr>
            </thead>

            <tbody>
                <% @orders.each do |order| %>
                <tr>
                    <td>
                        <%= link_to admin_order_path(order.id)  do %>
                          <%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
                          <% end %>
                    </td>
                    <td> <%= order.name %> </td>
                    <td> <% order.order_detail.sum(:amount) %> </td>
                    <td> <%= order.order_status %> </td>
                </tr>
                <% end %>

            </tbody>

        </table>

        <%= paginate @orders %>
    </div>
  </div>
</div>