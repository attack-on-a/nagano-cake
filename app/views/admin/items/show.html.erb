<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-10 col-lg-10 px-5 px-sm-0 mx-auto">
      <div class="row d-flex">
        <h3 class="offset-2 bg-light">商品詳細</h3>
      </div>

      <div class="container">
        <div class="row mt-5">

          <div class="col-5">
            <%= image_tag @item.get_item_image, size:"300x200" %>
          </div>

          <div class="col-7">

            <table class="table table-borderless">
              <tbody>
                <tr>
                  <td scope="col" style="width: 35%">商品名</td>
                  <td>
                    <%= @item.name %>
                </tr>
                <tr>
                  <td>商品説明</td>
                  <td>
                    <%= @item.explanatory %>
                  </td>
                </tr>
                <tr>
                  <td>ジャンル</td>
                  <td>
                    <%= @item.genre.name %>
                  </td>
                </tr>
                <tr>
                  <td>税込価格<br>(税抜価格)</td>
                  <td>
                    <%= (@item.with_tax_price).to_s(:delimited) %> (<%= (@item.price).to_s(:delimited) %>) 円
                  </td>
                </tr>
                <tr>
                  <td>販売ステータス</td>
                  <% if @item.is_active == true %>
                    <td class="text-success"><strong>販売中</strong></td>
                  <% else %>
                    <td class="text-secondary"><strong>販売停止中</strong></td>
                  <% end %>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="d-flex justify-content-center">
        <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success btn-lg m-3" %>
      </div>

    </div>
  </div>
</div>

