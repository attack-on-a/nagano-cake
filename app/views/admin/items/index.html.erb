<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-10 col-lg-10 px-5 px-sm-0 mx-auto">
      <div class="row d-flex justify-content-between">
        <h4 class="bg-light">商品一覧</h4>
        <%= link_to new_admin_item_path do  %>
          <h2 class="text-dark"><i class="far fa-plus-square bg-white"></i></h2>
        <% end %>
      </div>
      <table class='table table-hover table-borderless m-4'>
        <thead class="table-active">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th></th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody class="bg-white">
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td>
                <%= link_to item.name, admin_item_path(item), class:"p-0 text-dark border-bottom border-dark" %>
              </td>
              <td>¥<%= (item.price).to_s(:delimited) %></td>
              <td><%= item.genre.name %></td>
              <td></td>
              <td>
                <% if item.is_active == true %>
                  <span class="text-success"><strong>販売中</strong></span>
                <% else %>
                  <span class="text-secondary"><strong>販売停止中</strong></span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>

