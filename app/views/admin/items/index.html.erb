<div class='container'>
  <div class='row'>
    <div class="card col-sm-12 col-md-10 col-lg-10 px-5 px-sm-0 mx-auto" style="background-color:#fcfced">
      <div class="row d-flex">
        <h4 class="mx-auto">商品一覧</h4>
        <%= link_to new_admin_item_path do  %>
        <h2 class="text-dark mr-4"><i class="far fa-plus-square" style="background-color:#fcfced"></i></h2>
        <% end %>
      </div>
      <table class='table table-hover text-center'>
        <thead class="table-active">
          <tr>
            <th>商品ID</th>
            <th>商品画像</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th></th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td>
                <%= link_to admin_item_path(item) do %>
                  <%= image_tag item.get_item_image, size:"50x50", style:"border-radius: 20px;" %>
                <% end %>
              </td>
              <td>
                <%= link_to item.name, admin_item_path(item), class:"p-0 text-dark border-dark" %>
              </td>
              <td>¥<%= (item.price).to_s(:delimited) %></td>
              <td><%= item.genre.name %></td>
              <td></td>
              <td>
                <% if item.is_active == true %>
                  <span class="text-success"><strong>販売中</strong></span>
                <% else %>
                  <span class="text-secondary"><strong>販売停止中</strong></span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>

