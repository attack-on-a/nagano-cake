<h1>Admin::Orders#show</h1>
<p>Find me in app/views/admin/orders/show.html.erb</p>


 <h2>注文履歴詳細</h2>

 <div>
  <table>
    <tbody>
      <tr>
        <td>購入者</td>
        <td> <%= @customer.first_name + @customer.last_name  %> </td>
      </tr>

      <tr>
        <td>注文日</td>
        <td> <%= @order.created_at.strftime('%Y/%m/%d') %> </td>
      </tr>

      <tr>
        <td>配送先</td>
        <td> <%= @order.post_code %> <%= @order.address %><br>
            <%= @order.name %> </td>
      </tr>

      <tr>
        <td> 支払い方法</td>
        <td> <%= @order.payment %> </td>
      </tr>

      <tr>
        <td>注文ステータス</td>
          <td>
            <%= form_with model: @order, url: admin_order_path(@order), method: :patch do |f| %>
              <%= f.select :status, @order.order_status.keys.map {|k| [I18n.t("enums.order.order_status.#{k}"), k]} %>
              <%= f.submit "更新",class:"btn btn-primary" %>
            <% end %>
          </td>
      </tr>
    </tbody>
  </table>
 </div>

 <div>
  <table>
    <thead>
     <tr>
       <th>商品名</th>
       <th>単価(税込み)</th>
       <th>数量</th>
       <th>小計</th>
       <th>制作ステータス</th>
     </tr>
    </thead>

    <tbody>
         <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %> </td>
          <td><%= (order_detail.item.price * 1.1).floor %> </td>
          <td><%= order_detail.amount %> </td>
          <td><%= (order_detail.item.price * 1.1).floor * order_detail.amount %> </td>
          <td>
            <%= form_with model:OrderDetail, url:admin_order_details_path(order_detail), method: :patch do |f| %>
              <%= f.select :production_status_i18n, order_detail.production_statuses.key.map {|k| [I18n.t("enums.order_detail.production_status.#{k}"), k]} %>
              <!--参考資料  https://blog.to-ko-s.com/enum-select-box/ -->
              <%= f.submit "更新", class: "btn btn-success" %>
            <% end %>
          </td>
        </tr>
        <% end %>
    </tbody>
  </table>
 </div>

   <table>
        <thead>
          <tr>
            <td>商品合計</td>
            <td> <%= @order.total - @order.postage %>  </td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>配送料</td>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td><%= @order.total %></td>
          </tr>
        </tbody>
   </table>
