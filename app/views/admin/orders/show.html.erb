<div class='container'>
  <div class="row d-flex">
    <h4 class="bg-light ml-5">注文履歴詳細</h4>
  </div>
  <div class="row mt-3">
    <div class="col-12">
      <table class="my-2 table table-borderless">
        <tr>
          <td style="width: 20%"><strong>購入者</strong></td>
          <td>
            <%= link_to @customer.last_name + @customer.first_name , admin_customer_path(@order.customer_id), class:"text-dark" %>
          </td>
        </tr>
        <tr>
          <td><strong>注文日</strong></td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>

        <tr>
          <td><strong>配送先</strong></td>
          <td>
            〒<%= @order.post_code %> <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>

        <tr>
          <td><strong>支払い方法</strong></td>
          <td><%= @order.payment_i18n %></td>
        </tr>

        <tr>
          <td><strong>注文ステータス</strong></td>
            <td>
              <%= form_with model:@order, url:admin_order_path(@order), method: :patch do |f| %>
                <%= f.select :order_status, Order.order_statuses.keys.map{|k| [I18n.t("enums.order.order_status.#{k}"), k]}, class:"form-control" %>
                <%= f.submit "更新",class:"btn btn-sm btn-success h6" %>
              <% end %>
            </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-9">
      <table class='table table-hover table-borderless my-4 border-top'>
        <thead class="bg-light my-2">
         <tr>
           <th>商品名</th>
           <th class="text-center">単価 ( 税込 )</th>
           <th class="text-center">数量</th>
           <th class="text-center">小計</th>
           <th>製作ステータス</th>
         </tr>
        </thead>

        <tbody>
             <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %> </td>
              <td class="text-center"><%= order_detail.item.with_tax_price.to_s(:delimited) %></td>
              <td class="text-center"><%= order_detail.amount %> </td>
              <td class="text-center"><%= (order_detail.item.with_tax_price * order_detail.amount).to_s(:delimited) %> </td>
              <td>
                <%= form_with model:OrderDetail, url:admin_order_detail_path(order_detail), method: :patch do |f| %>
                  <%= f.select :production_status,
                  OrderDetail.production_statuses.keys.map {|k| [I18n.t("enums.order_detail.production_status.#{k}"), k]},
                  {selected: order_detail.production_status} %>
                  <!--参考資料  https://blog.to-ko-s.com/enum-select-box/ -->
                  <%= f.submit "更新",class:"btn btn-sm btn-success h6 ml-3" %>
                <% end %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-3">
       <table class="table table-borderless mt-5">
          <tr>
            <td><strong>商品合計</strong></td>
            <td><%= (@order.total - @order.postage).to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <td><strong>配送料</strong></td>
            <td><%= @order.postage %>円</td>
          </tr>
          <tr>
            <th><strong>請求金額合計</strong></th>
            <td><strong><%= @order.total.to_s(:delimited) %>円</strong></td>
          </tr>
       </table>
    </div>

  </div>

</div>


