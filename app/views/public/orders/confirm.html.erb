<div class="container">
  <div class="row md-3">
    <div class="col-8 offset-1">
      <h2>注文情報確認</h2>
    </div>
  </div>
    <div class="row">
      <div class="col-7 offset-1">
        <table class="table table-bordered border-dark">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
          <% @order.total = 0 %>
            <% @cart_items.each do |order_item| %>
              <tr>
                <td><%= image_tag order_item.item.get_item_image, size:'50x50' %>
                <%= order_item.item.name %></td>
                <td><%= (order_item.item.price * 1.1).floor.to_s(:delimited) %></td>
                <td><%= order_item.amount %></td>
                <td><%=((order_item.item.price * order_item.amount)* 1.1).floor.to_s(:delimited) %></td>
              </tr>
              <% @order.total += ((order_item.item.price * order_item.amount)* 1.1).floor %>
            <% end %>
        </table>
      </div>
      <div class="col-3 offset-1">
        <table class="table table-bordered border-dark">
          <% @order.postage = 800 %>
          <tr>
            <th class="table-secondary">送料</th>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <th class="table-secondary">商品合計</th>
            <td><%= @order.total.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th class="table-secondary">請求金額</th>
            <td><%= (@order.postage + @order.total).to_s(:delimited) %></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-11 offset-1">
        <table class="table table-borderless">
          <tr>
            <th class="col-1">支払方法</th><td class="col-10"><%=@order.payment_i18n %></td>
          </tr>
          <tr>
            <th class="col-1">お届け先</th>
            <td class="col-10">
              <%= @order.post_code %>
              <%= @order.address%>
              <%= @order.name %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  <div class="row justify-content-center">
    <%= form_with model: @order,url: orders_path,method: :post do |f|%>
      <%= f.hidden_field :customer_id %>
      <%= f.hidden_field :post_code %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :payments %>
      <%= f.hidden_field :total %>
      <%= f.hidden_field :postage %>
      <%= f.hidden_field :order_status %>
      <%= f.submit "注文を確定する",class:"btn btn-success" %>
    <% end %>
  </div>
</div>