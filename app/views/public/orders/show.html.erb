<div class="offset-2">

  <div class="row mt-4">
    <h4>注文履歴詳細</h4>
  </div>

  <div class="row">
    <div class="col-6">
      <strong>注文情報</strong>
      <table class="table table-bordered bg-white">
        <tr>
          <td class="table-active">注文日</td>
          <td> <%= @order.updated_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td class="table-active">配送先</td>
          <td>〒<%= @order.post_code %>
                <%= @order.address %>
                <%= @order.name %>
          </td>
        </tr>
        <tr>
          <td class="table-active">支払方法</td>
          <td><%= @order.payment_i18n %></td>
        </tr>
        <tr>
          <td class="table-active">ステータス</td>
          <td><%= @order.order_status_i18n %></td>
        </tr>
      </table>
    </div>


    <div class="col-5">
      <strong>請求情報</strong>
      <table class="table table-bordered bg-white">
        <thead>
          <tr>
            <td class="table-active">商品合計</td>
            <td>¥<%= @order.total.to_s(:delimited) %></td>
          </tr>
          <tr>
            <td class="table-active">配送料</td>
            <td>¥<%= @order.postage.to_s(:delimited) %></td>
          </tr>
          <tr>
            <td class="table-active">ご請求額</td>
            <td>¥<%= (@order.postage + @order.total).to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row col-9">
    <strong>注文内容</strong>
    <table class="table table-bordered bg-white">
      <thead class="table-active">
       <tr>
         <td>商品</td>
         <td>単価(税込み)</td>
         <td>個数</td>
         <td>小計</td>
       </tr>
      </thead>
      <tbody class="bg-white">
      <% @pay_details.each do |order_detail| %>
       <tr>
         <td><%= order_detail.item.name %></td>
         <td>¥<%= order_detail.total_price.to_s(:delimited) %></td>
         <td><%= order_detail.amount %></td>
         <td>¥<%= (order_detail.total_price * order_detail.amount).to_s(:delimited) %> </td>
       </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>