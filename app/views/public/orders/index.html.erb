<div class="container">
 <div class="card rounded col-12 mx-auto mt-4" style="background-color:#fcfced;" >
  <div class="row">
   <div class="col-12 p-0">
    <h4 class="text-center p-3">注文履歴一覧</h4>
    <table class="table table-bordered table-hover mb-0">
     <thead class="table-active">
      <tr class="text-center">
       <th>注文日</th>
       <th>配送先</th>
       <th>注文商品</th>
       <th>支払金額</th>
       <th>ステータス</th>
       <th>注文詳細</th>
      </tr>
     </thead>
     <tbody>
      <% @orders.each do |order| %>
       <tr>
        <td class="align-middle text-center">
         <%= order.created_at.strftime('%Y/%m/%d') %>
        </td>
        <td>
         〒<%= order.post_code %><br>
         <%= order.address %><br>
         <%= order.name %><br>
        </td>
        <td>
          <% order.order_details.each do |i| %>
           <%= i.item.name %><br>
          <% end %>
        </td>
        <td class="align-middle text-center">
          <%= order.total.to_s(:delimited) %>円
        </td>
        <td class="align-middle text-center">
          <%= order.order_status_i18n %>
        </td>
        <td class="align-middle text-center">
          <%= link_to "表示する",  order_path(order.id), class: "btn", :style=>"color:#ee7800; background-color:#f2d58a;" %>
        </td>
       </tr>
      <% end %>
     </tbody>
    </table>
   </div>
  </div>
 </div>
 <div class="d-flex justify-content-center mt-5">
    <%= paginate @orders %>
 </div>
</div>
