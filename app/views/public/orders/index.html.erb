<h1>Public::Orders#index</h1>
<p>Find me in app/views/public/orders/index.html.erb</p>

<h2>注文履歴一覧</h2>

<table>
  <tr>
    <td>注文日</td>
    <td>配送先</td>
    <td>注文商品</td>
    <td>支払金額</td>
    <td>ステータス</td>
    <td>注文詳細</td>
  </tr>

   <% @orders.each do |order| %>

  <tr>
    <td>
     <%= order.updated_at.strftime('%Y/%m/%d') %>
    </td>
    <td>
     <%= order.post_code %><br>
     <%= order.address %><br>
     <%= order.name %><br>
    </td>
    <td> <% order.order_detail.each do |item| %>
     <%= item.item_id.name %> <br> <% end %>
    </td>
     <td>
     <%= order.total %>円
    </td>
    <td>
      <%= order.status_i18n %>
    </td>
    <td>
     <%= link_to "表示する",  order_path(order.id), class: "btn btn-primary"  %>
    </td>
  </tr>
   <% end %>
</table>