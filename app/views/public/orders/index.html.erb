<div class="offset-2">
  <div class="row mt-4">
    <mark class="h4 table-secondary">注文履歴一覧</mark>
  </div>

  <table class="table table-bordered col-10">
   <thead>
    <tr>
       <th class="table-secondary">注文日</th>
       <th class="table-secondary">配送先</th>
       <th class="table-secondary">注文商品</th>
       <th class="table-secondary">支払金額</th>
       <th class="table-secondary">ステータス</th>
       <th class="table-secondary">注文詳細</th>
    </tr>
   </thead>

   <tbody>
   <% @orders.each do |order| %>
    <tr>
       <td>
        <%= order.created_at.strftime('%Y/%m/%d') %>
       </td>
       <td>
        〒<%= order.post_code %><br>
        <%= order.address %><br>
        <%= order.name %><br>
       </td>
       <td>
         <% order.order_details.each do |i| %>
         <%= i.item.name %> <br> <% end %>
       </td>
       <td>
         <%= order.total.to_s(:delimited) %>円
       </td>
       <td>
         <%= order.order_status_i18n %>
       </td>
       <td>
         <%= link_to "表示する",  order_path(order.id), class: "btn btn-primary"  %>
       </td>
    </tr>
    <% end %>
   </tbody>
 </table>
</div>