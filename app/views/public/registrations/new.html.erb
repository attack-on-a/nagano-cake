<div class="container">
  <div class="row">
    <div class="offset-1">
      <h4>新規会員登録</h4>
    </div>
  </div>
    <div class="row">
      <div class="offset-2 col">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
        <div class="form-group">
          <div class="row">
          <%= f.label :"名前",class: "offset-1"%>
          (姓)<%= f.text_field :last_name,autofocus: true,placeholder: "令和",class: "form-control col-3"%>
          (名)<%= f.text_field :first_name,placeholder: "道子",class: "form-control col-3"%>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <%= f.label :"フリガナ",class: "offset-1" %>
            (セイ)<%= f.text_field :kana_last_name,placeholder: "レイワ",class: "form-control col-3" %>
            (メイ)<%= f.text_field :kana_first_name,placeholder: "ミチコ",class: "form-control col-3"%>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <%= f.label :"メールアドレス",class: "offset-1" %>
            <%= f.email_field :email, autocomplete: "email",placeholder: "sample@example.com",class: "form-control col-8" %>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <%= f.label :"郵便番号(ハイフンなし)",class: "offset-1"%>
            <%= f.text_field :post_code,placeholder: "0000000",class: "form-control col-3"%>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <%= f.label :"住所",class: "offset-1"%>
            <%= f.text_field :post_address,size: "55",placeholder: "東京都渋谷区代々木神園町０−０",class: "form-control offset-1 col-9"%>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <%= f.label :"電話番号(ハイフンなし)",class: "offset-1"%>
            <%= f.text_field :phone_number, autofocus: true,placeholder: "0000000000",class: "form-control col-4"%>
           </div>
        </div>

        <div class="form-group">
          <div class="row">
            <%= f.label :"パスワード(６文字以上)",class: "offset-1"%>
            <%= f.password_field :password, autocomplete: "new-password",class: "form-control col-4"%>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <%= f.label :"パスワード(確認用)",class: "offset-1"%>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control col-4"%>
          </div>
        </div>

        <div class="form-group">
          <div class="row offset-4">
            <%= f.submit "新規登録",class:"btn btn-success"%>
          </div>
        </div>
      <% end %>
    <div class="row">
      <div class="col offset-1">
        <h5>既に登録済みの方</h5>
          <p><%= link_to "こちら",new_customer_session_path %>からログインしてください</p>
      </div>
    </div>
  </div>
</div>