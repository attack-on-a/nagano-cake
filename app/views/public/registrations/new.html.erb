<div class="container">
  <div class="row-8 offset-1">
    <div class="card text-center mx-auto", style="background-color:#fcfced">
      <div class="card-header text-center ">
        <h4>新規会員登録</h4>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
        <table class="offset-1">
          <tr>
            <th><%= f.label :"名前" %></th>
            <th style="width:10%" class="text-center">(姓)</th>
            <td><%= f.text_field :last_name,autofocus: true,placeholder: "令和", class:"my-3",:style =>"background-color:#fcfced" %></td>
            <th style="width:10%" class="text-center">(名)</th>
            <td><%= f.text_field :first_name,placeholder: "道子",:style =>"background-color:#fcfced" %></td>
          </tr>
          <tr class="m-2">
            <th><%= f.label :"フリガナ" %></th>
            <th class="text-center">(セイ)</th>
            <td><%= f.text_field :kana_last_name,placeholder: "レイワ",:style =>"background-color:#fcfced" %></td>
            <th class="text-center">(メイ)</th>
            <td><%= f.text_field :kana_first_name,placeholder: "ミチコ",:style =>"background-color:#fcfced" %></td>
          </tr>
          <tr>
            <th><%= f.label :"メールアドレス" %></th>
            <th></th>
            <td><%= f.email_field :email, autocomplete: "email",placeholder: "sample@example.com", class:"my-3",:style =>"background-color:#fcfced"  %></td>
          </tr>
          <tr>
            <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
            <th></th>
            <td><%= f.text_field :post_code,placeholder: "0000000",:style =>"background-color:#fcfced" %></td>
          </tr>
          <tr>
            <th scope="row"><%= f.label :"住所"%></th>
            <th></th>
            <td colspan="3"><%= f.text_field :post_address,size: "55",placeholder: "東京都渋谷区代々木神園町０−０", class:"my-3",:style =>"background-color:#fcfced"  %></td>
          </tr>
          <tr>
            <th><%= f.label :"電話番号(ハイフンなし)" %></th>
            <th></th>
            <td><%= f.text_field :phone_number, autofocus: true,placeholder: "0000000000",:style =>"background-color:#fcfced" %></td>
          </tr>
          <tr>
            <th><%= f.label :"パスワード(６文字以上)" %></th>
            <th></th>
            <td><%= f.password_field :password, autocomplete: "new-password", class:"my-3",:style =>"background-color:#fcfced"  %></td>
          </tr>
          <tr>
            <th><%= f.label :"パスワード(確認用)" %></th>
            <th></th>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password",:style =>"background-color:#fcfced" %></td>
          </tr>
          <tr>
            <th colspan="2"></th>
            <td><%= f.submit "新規登録",class:"px-3 my-3 btn", style: "color:#0000ff; background-color:#6495ed;" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
  <div class="row text-center">
    <div class="col p-5">
      <h4>既に登録済みの方</h4>
      <p><%= link_to "こちら",new_customer_session_path %>からログインしてください</p>
    </div>
  </div>
</div>