<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="offset-md-3" style="margin-top:20px; margin-bottom:30px;">
        <h4>マイページ</h4>
      </div>
      <div class="d-flex" style="margin-bottom:20px;">
        <h4 class="font-weight-bold">登録情報</h4>
        <%= link_to "編集する", customers_information_edit_path, class: "btn btn-success ml-5 pr-4 pl-4" %>
      </div>
      <table class="table">
        <tbody>
          <tr>
            <td class="table-active border border-dark">氏名</td>
            <td class="border border-dark"><%= @customer.last_name+@customer.first_name %></td>
          </tr>
          <tr>
            <td class="table-active border border-dark">カナ</td>
            <td class="border border-dark"><%= @customer.kana_last_name+@customer.kana_first_name %></td>
          </tr>
          <tr>
            <td class="table-active border border-dark">郵便番号</td>
            <td class="border border-dark"><%= @customer.post_code %></td>
          </tr>
          <tr>
            <td class="table-active border border-dark">住所</td>
            <td class="border border-dark"><%= @customer.post_address %></td>
          </tr>
          <tr>
            <td class="table-active border border-dark">電話番号</td>
            <td class="border border-dark"><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td class="table-active border border-dark">メールアドレス</td>
            <td class="border border-dark"><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      <div class="d-flex" style="margin-top:40px;">
        <h4 class="font-weight-bold mr-4">配送先</h4>
        <%= link_to "一覧を見る", destinations_path, class: "btn btn-primary ml-5 pr-4 pl-4" %>
      </div>
      <div class="d-flex" style="margin-top:20px;">
        <h4 class="font-weight-bold">注文履歴</h4>
        <%= link_to "一覧を見る", orders_path, class: "btn btn-primary ml-5 pr-4 pl-4" %>
      </div>
    </div>
  </div>
</div>