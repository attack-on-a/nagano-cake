<div class='container'>
  <div class='row'>
    <div class='col-2'>
      <table class='table table-borderless'>
        <thead class="border border-dark">
          <tr>
            <th colspan="2">ジャンル一覧</th>
          </tr>
        </thead>
        <tbody class="border border-dark">
            <% @genres.each do |genre| %>
              <tr>
                <td>
                  <%= genre.name %>
                </td>
              </tr>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>

    <div class='col-10'>
      <div class="row">
        <h3><strong>商品一覧</strong></h3>
        <p>(全<%= @items_count %>件)</p>
      </div>
      <div class="d-flex flex-row">
        <div>
          <% @items.each do |item| %>
            <%= link_to item_path(item) do %>
              <%= image_tag item.get_item_image, size:"150x100" %>
            <% end %>
            <p><strong><%= item.name %></strong></p>
            <p><strong>￥<%= (item.price).to_s(:delimited) %></strong></p>
          <% end %>
        </div>
      </div>

      <div>
        <%= paginate @items %>
      </div>

    </div>
  </div>
</div>

