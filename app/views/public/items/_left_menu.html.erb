<table class='card table table-borderless bg-white table-hover' style="width: 12rem;">
  <thead class="border-bottom border-dark mx-auto">
    <tr>
      <th class="mx-auto">ジャンル検索</th>
    </tr>
  </thead>
  <tbody class="border-dark mx-auto">
    <% genres.each do |genre| %>
      <tr>
        <td class="mx-auto">
          <div>
            <%= link_to genre.name, searchs_search_path(content:genre.name, model:"genre"), class:"btn btn-outline-line btn-block" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
