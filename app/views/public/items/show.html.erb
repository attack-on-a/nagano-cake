<div class='container'>
  <div class='row'>
    <div class='col-2'>

      <table class='table table-borderless'>
        <thead class="border border-dark">
          <tr>
            <th colspan="2">ジャンル一覧</th>
          </tr>
        </thead>
        <tbody class="border border-dark">
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class='col-4'>
      <%= image_tag @item.get_item_image, size:"250x200" %>
    </div>

    <div class="col-6">
      <h4><strong><%= @item.name %></strong></h4>
      <p><%= @item.explanatory %></p>
      <h5><strong>￥<%= (@item.with_tax_price).to_s(:delimited) %></strong></h5>
      <span>(税込)</span>

      <div class="container">
        <div class="row">
          <%= form_with model:CartItem, url:cart_items_path, method: :post, local:true do |f| %>
            <%= f.hidden_field:customer_id, :value => current_customer.id %>
            <%= f.hidden_field:item_id, :value => @item.id %>
            <div class="form-group d-flex">
              <div>
                <%= f.select:amount, 1..100, { prompt: '個数選択' }, class: "form-control" %>
              </div>
              <div class="ml-5">
                <%= f.submit "カートに入れる", class: "btn btn-success" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>

