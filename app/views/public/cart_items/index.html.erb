<div class="container">
  <div class="row d-flex justify-content-between">
    <h4>ショッピングカート</h4>
    <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger " %>
  </div>
  <div class="row">
    <table class='table table-hover table-inverse table-bordered'>
      <thead class="border border-dark">
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.get_item_image, size:'50x50' %>
            </td>
            <td><%= cart_item.item.with_tax_price %></td>

            <td>
              <%= form_with url:cart_items_path, method: :post, local:true do |f| %>
                <%= f.hidden_field:customer_id, current_customer.id %>
                <%= f.hidden_field:item_id, @item.id %>
                <div class="form-group d-flex">
                  <div>
                    <%= f.select:amount, 1..100, { prompt: '個数選択' }, class: "form-control" %>
                  </div>
                  <div class="ml-5">
                    <%= f.submit "カートに入れる", class: "btn btn-success" %>
                  </div>
                </div>
              <% end %>
            </td>

            <td><%= (cart_item.item.with_tax_price*cart_item.amount).to_s(:delimited) %></td>

            <td>
              <%= link_to "削除する", cart_items_path(cart_item), method: :delete %>
            </td>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row d-flex justify-content-between">
    <%= link_to "買い物を続ける", items_path, class:"btn btn-primary" %>

    <table class="table table-borderless">
      <tr>
        <th scope="row">合計金額</th>
        <td>
          <% @cart_items.each do |cart_item| %>
            <% @total += cart_item.subtotal %>
          <% end %>
          <%= @total %>
        </td>
      </tr>
    </table>
  </div>
  <div class="d-flex justify-content-center">
    <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success" %>
  </div>
  <%= paginate @cart_items %>
</div>

