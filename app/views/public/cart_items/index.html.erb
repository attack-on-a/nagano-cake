<div class="container">
  <div class="row d-flex justify-content-between">
    <h5 class="bg-light"> ショッピングカート </h5>
    <%= link_to "カートを空にする", cart_items_path, "data-confirm" => "全部消しますか?", method: :delete, class: "btn btn-md btn-danger" %>
  </div>
  <div class="row">
    <table class='table table-hover table-inverse my-3'>
      <thead class="border border-dark font-weight-nomal">
        <tr class="bg-light border-dark">
          <th class="border border-dark">商品名</th>
          <th class="border border-dark">単価(税込)</th>
          <th class="border border-dark">数量</th>
          <th class="border border-dark">小計</th>
          <th class="border border-dark" colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td class="align-middle border border-dark" style="width:40%">
              <%= image_tag cart_item.item.get_item_image, size:'70x50' %>
                <%= cart_item.item.name %>
            </td>
            <td class="align-middle border border-dark" style="width:15%"><%= (cart_item.item.with_tax_price).to_s(:delimited) %></td>

            <td class="border border-dark" style="width:15%">
              <%= form_with model:CartItem, url:cart_item_path(cart_item), method: :patch, local:true do |f| %>
                <div class="form-group d-flex mt-3">
                  <div>
                    <%= f.select:amount, 1..100, {selected: cart_item.amount.to_i}, class: "form-control align-middle" %>
                  </div>
                  <div class="ml-1">
                    <%= f.submit "変更", class: "btn btn-md btn-success align-middle p-2" %>
                  </div>
                </div>
              <% end %>
            </td>

            <td class="align-middle border border-dark"><%= (cart_item.item.with_tax_price*cart_item.amount).to_s(:delimited) %></td>

            <td class="align-middle border border-dark" style="width:15%">
              <%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-md btn-danger h6" %>
            </td>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row d-flex justify-content-between my-4">
    <div>
      <%= link_to "買い物を続ける", root_path, class:"btn btn-primary ml-3" %>
    </div>
    <div>
      <table class="table">
        <tr>
          <th class="bg-light border border-dark" style="width:140px">合計金額</th>
          <td class="border border-dark" style="width:140px">
            <% @cart_items.each do |cart_item| %>
              <% @total += cart_item.subtotal %>
            <% end %>
            <%= @total.to_s(:delimited) %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center mt-3">
    <%= paginate @cart_items %>
  </div>
  <% if current_customer.cart_items.present? %>
    <div class="d-flex justify-content-center my-5">
      <%= link_to "情報入力に進む", new_order_path, class:"btn btn-lg btn-success" %>
    </div>
  <% end %>
</div>
